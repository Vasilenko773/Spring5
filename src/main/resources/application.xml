<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:property-placeholder location="application.properties"/>

    <bean id="driver" class="com.example.spring5.domain.Driver">
        <constructor-arg value="${my.lacation}"/>
    </bean>

    <bean id="myXMLBean" class="com.example.spring5.domain.MyXMLBean" factory-method="of">
        <!--STRING-->
        <constructor-arg value="${my.lacation}"/>
        <!--LIST-->
        <constructor-arg>
            <list>
                <value type="java.lang.Object">v1</value>
                <value type="java.lang.Object">v1</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <!--MAP-->
        <constructor-arg>
            <map>
                <entry key="url" value="myxmlbeanurl"/>
                <entry key="isSingleTon" value="true"/>
                <entry key="author" value="#{systemProperties['user.name']}"/>
                <entry key="array" value="#{driver.name}"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="myXMLBean1" class="com.example.spring5.domain.MyXMLBean" scope="singleton" init-method="init" destroy-method="destroy">
        <!--STRING-->
        <constructor-arg value="firstBean1" type="java.lang.String"/>
        <!--LIST-->
        <constructor-arg name="args" type="java.util.List">
            <list>
                <value type="java.lang.Object">v</value>
                <value type="java.lang.Object">v1</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <!--MAP-->
        <constructor-arg>
            <map>
                <entry key="url" value-ref="driver"/>
                <entry key="isSingleTon" value="true" value-type="java.lang.Boolean"/>
                <entry key="xmlBean" value-ref="myXMLBean"/>
            </map>
        </constructor-arg>
        <property name="args" >
            <list>
                <value type="java.lang.Object">v</value>
                <value type="java.lang.Object">v1</value>
                <ref bean="myXMLBean"/>
            </list>

        </property>
    </bean>

<!--    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">-->
<!--        <property name="locations" value="application.properties"/>-->
<!--    </bean>-->


</beans>