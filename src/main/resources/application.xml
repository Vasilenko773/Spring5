<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:property-placeholder location="application.properties"/>
    <context:annotation-config/>

    <bean class="com.example.spring5.bfpp.LogBeanFactoryPostProcessor"/>
    <bean class="com.example.spring5.bfpp.VerifyPropertyBeanFactoryPostProcessor"/>
    <bean class="com.example.spring5.bpp.InjectBeanPostProcessor"/>
    <bean class="com.example.spring5.bpp.MyTransactionBeanPostProcessor"/>
    <bean class="com.example.spring5.bpp.AuditingBeanPostProcessor"/>

    <bean id="connectionPool" class="com.example.spring5.domain.repository.ConnectionPool">
        <constructor-arg value="${my.connection.pool.url}"/>
        <constructor-arg value="${my.connection.pool.username}"/>
        <constructor-arg value="${my.connection.pool.password}"/>
    </bean>

    <bean id="companyRepository" class="com.example.spring5.domain.repository.CompanyRepository"/>

    <bean id="myXMLBean" class="com.example.spring5.domain.archive.MyXMLBean" factory-method="of">
        <!--STRING-->
        <constructor-arg value="hello world"/>
        <!--LIST-->
        <constructor-arg>
            <list>
                <value type="java.lang.Object">v1</value>
                <value type="java.lang.Object">v1</value>
                <ref bean="connectionPool"/>
            </list>
        </constructor-arg>
        <!--MAP-->
        <constructor-arg>
            <map>
                <entry key="url" value="myxmlbeanurl"/>
                <entry key="isSingleTon" value="true"/>
                <entry key="author" value="#{systemProperties['user.name']}"/>
                <entry key="array" value="#{connectionPool.url}"/>
            </map>
        </constructor-arg>
    </bean>

</beans>