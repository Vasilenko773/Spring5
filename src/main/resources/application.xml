<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="driver" class="com.example.spring5.domain.Driver"/>

    <bean id="myXMLBean" class="com.example.spring5.domain.MyXMLBean" factory-method="of">
        <!--STRING-->
        <constructor-arg value="firstBean"/>
        <!--LIST-->
        <constructor-arg>
            <list>
                <value type="java.lang.Object">v</value>
                <value type="java.lang.Object">v1</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <!--MAP-->
        <constructor-arg>
            <map>
                <entry key="url" value="myxmlbeanurl"/>
                <entry key="isSingleTon" value="true"/>
                <entry key="dricer" value-ref="driver"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="myXMLBean1" class="com.example.spring5.domain.MyXMLBean" scope="singleton" init-method="init">
        <!--STRING-->
        <constructor-arg value="firstBean1" type="java.lang.String"/>
        <!--LIST-->
        <constructor-arg name="args" type="java.util.List">
            <list>
                <value type="java.lang.Object">v</value>
                <value type="java.lang.Object">v1</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <!--MAP-->
        <constructor-arg>
            <map>
                <entry key="url" value-ref="driver"/>
                <entry key="isSingleTon" value="true" value-type="java.lang.Boolean"/>
                <entry key="xmlBean" value-ref="myXMLBean"/>
            </map>
        </constructor-arg>
        <property name="args" >
            <list>
                <value type="java.lang.Object">v</value>
                <value type="java.lang.Object">v1</value>
                <ref bean="myXMLBean"/>
            </list>

        </property>
    </bean>


</beans>